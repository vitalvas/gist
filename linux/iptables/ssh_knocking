*filter
:INPUT DROP [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

-A INPUT -i lo -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type any -j ACCEPT

-A INPUT -m state --state NEW -m tcp -p tcp --dport 1234 -m recent --name SSH --set -j DROP
-A INPUT -m state --state NEW -m tcp -p tcp --dport 1235 -m recent --name SSH --remove -j DROP
-A INPUT -m state --state NEW -m recent --rcheck --name SSH -j ACCEPT

-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

COMMIT
